<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Insumos_act" >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="183dp"
        android:layout_height="127dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="276dp"
        android:layout_height="215dp"
        android:layout_marginBottom="40dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/et_codigo"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:ems="10"
            android:hint="Codigo Insumo"
            android:inputType="textPersonName"
            android:textColor="#ffffff"
            android:textColorHint="#565656"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_nombre"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:ems="10"
            android:hint="Nombre Insumo"
            android:inputType="textPersonName"
            android:textColor="#ffffff"
            android:textColorHint="#565656"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_precio"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:ems="10"
            android:hint="Precio Insumo"
            android:inputType="textPersonName"
            android:textColor="#ffffff"
            android:textColorHint="#565656"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_stock"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="Stock Insumo"
            android:inputType="textPersonName"
            android:textColor="#ffffff"
            android:textColorHint="#565656"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="290dp"
        android:layout_height="201dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="AñadirInsumos"
            android:text="Añadir Insumo"
            app:backgroundTint="#565656" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="MostrarInsumos"
            android:text="Mostrar Insumo"
            app:backgroundTint="#565656" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="EliminarInsumos"
            android:text="Eliminar Insumo"
            app:backgroundTint="#565656" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="ActualizarInsumos"
            android:text="Actualizar Insumo"
            app:backgroundTint="#565656" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>